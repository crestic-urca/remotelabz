						<tr>
							<th class="sorting" >Nom</th>
							<th>type</th>
							<th>propriete</th>
							<th>modele</th>
							<th>marque</th>
							<th>systeme</th>
							<th>Interfaces</th>
							<th>Interface de controle</th>
							<th>Action</th>

						</tr>
                    </thead>
				    <tbody>
				{% for device in list_device %}

					<td class="sorting_1" tabindex="0">{{ device.Nom }}</td>
					<td>{{ device.type }}</td>
					<td>{{ device.propriete }}</td>
					<td>{{ device.modele }}</td>
					<td>{{ device.marque }}</td>
					<td>{{ device.systeme.nom }}</td>
					
					{% if device.networkInterfaces is empty %}
							<td> device sans interface</td>
				{%else%}
					<td>
						{% for interface in device.networkInterfaces %}
							{{ interface.nom }}
								<br>
						{% endfor %}
					</td>
				{%endif%}
				{% if device.interfaceControle is empty %}
							<td> device sans interface <br> de controle </td>
				{%else%}
					<td>
						{{ device.interfaceControle.nom }}
					</td>
				{%endif%}


					{#<td><button class="btn btn-primary" id="button_{{device.id}}" onclick="delete_device('{{device.id}}')" value="delete" >Delete</button></td>#}
