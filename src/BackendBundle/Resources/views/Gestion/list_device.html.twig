                    <div class="x_title">
                        <h2>Liste des device</h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- content starts here -->
					<table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer" width="100%" >
