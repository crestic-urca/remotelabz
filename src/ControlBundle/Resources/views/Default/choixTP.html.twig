{% extends 'AppBundle::accueil_auth.html.twig' %}

{% block body %}

<div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste des TP disponibles</h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
					{% if list_tp is not null %}
					{% for tp in list_tp %}
					<div class="col-md-4 col-sm-4 col-xs-12">
					{{ tp.nom }}</div>
					<div class="col-md-4 col-sm-4 col-xs-12">
					<a href="{{path('startLab',{'tp_id': tp.id})}}"><button class="btn btn-success">Start</button></a></div>
					<div class="col-md-4 col-sm-4 col-xs-12">
					<a href="{{path('stopLab',{'tp_id': tp.id})}}"><button class="btn btn-danger">Stop</button></a></div>
					{% endfor %}
					{% else %}
					Aucun TP disponibles
					{% endif %}
					</div>
				</div>
			</div>
</div>

{% endblock %}