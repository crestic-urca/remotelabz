{% extends 'AppBundle::accueil_auth.html.twig' %}

{% block body %}
	<div id="page-wrapper">
            {% for flash_message in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
	{% endfor %}
	    {% for flash_message in app.session.flashbag.get('danger') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}

			
			<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste des utilisateurs</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
	     
			<div class="row">
				<table><tr><th>Nom</th><th>Prénom</th><th>Mail</th><th>Username</th><th>Activé ?</th></tr>
				{% for user in list_user %}
				<tr>
					<td>{{ user.lastname }}</td><td>{{ user.firstname }}</td><td>{{ user.email }}</td><td>{{ user.username }}</td><td>{{user.enabled}}</td>
				</tr>
				{% endfor %}
				</table>
			</div>
    
{% endblock %}