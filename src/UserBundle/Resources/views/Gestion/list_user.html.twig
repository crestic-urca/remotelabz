{% extends 'AppBundle::accueil_auth.html.twig' %}
{% block stylesheets %}
<link href="{{asset('js/datatables/jquery.dataTables.min.css')}}" rel="stylesheet">
<link href="{{asset('js/datatables/buttons.bootstrap.min.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
	<div id="page-wrapper">
            {% for flash_message in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
	{% endfor %}
	    {% for flash_message in app.session.flashbag.get('danger') %}
			<div class="flash-notice">
				{{ flash_message }}
			</div>
		{% endfor %}

	<div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste des utilisateurs</h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- content starts here -->
					<table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer" width="100%" >
						<thead>
						<tr>
							<th class="sorting" >Nom</th>
							<th>Prénom</th>
							<th>Mail</th>
							<th>Username</th>
							<th>Role</th>
							<th>Activation/Désactivation</th>
						</tr>
                    </thead>
					<tfoot>
						<tr role="row">
							<th>Nom</th>
							<th>Prénom</th>
							<th>Mail</th>
							<th>Username</th>
							<th>Role</th>
							<th>Action</th>
						</tr>
                    </tfoot>
				    <tbody>
				{% for user in list_user %}
				
				<tr id={% if user.username != "admin" %}"tr_{{user.id}}" {% else %} "tr" {%endif %} {% if user.enabled == 0 %}  class="danger" {% endif %} class="{% if loop.index is odd %}odd{%else%}even{%endif%}" role="row">
					<td class="sorting_1" tabindex="0">{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.username }}</td>
					<td>
					{% if user.role is not null %} {{ user.role.nom }} {% endif %}</td>
					<td>
					{% if user.username != "admin" %}
					{% if user.enabled == 1 %}
						<button class="btn btn-primary" id="button_{{user.id}}" onclick="Change_Activation(this)" value="Désactiver" >Désactiver</button>
					{%else%}					
						<button class="btn btn-primary" id="button_{{user.id}}" onclick="Change_Activation(this)" value="Activer" >Activer</button>
					{% endif %}
						<button class="btn btn-primary" id="sup_{{user.id}}" onclick="Supprimer(this)" value="Supprimer" >Supprimer</button>
					{% endif %}</td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
                        <!-- content ends here -->
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
