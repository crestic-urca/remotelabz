        <script>
          var handleDataTableButtons = function() {
              "use strict";
              0 !== $("#datatable-buttons").length && $("#datatable-buttons").DataTable({
                dom: "Bfrtip",
				
                buttons: [{
                  extend: "copy",
                  className: "btn-sm"
                }, {
                  extend: "csv",
                  className: "btn-sm"
                }, {
                  extend: "excel",
                  className: "btn-sm"
                }, {
                  extend: "pdf",
                  className: "btn-sm"
                }, {
                  extend: "print",
                  className: "btn-sm"
                }],
                responsive: !0
              })
            },
            TableManageButtons = function() {
              "use strict";
              return {
                init: function() {
                  handleDataTableButtons()
                }
              }
            }();
   
        $(document).ready(function() {
			$('#datatable').DataTable( {
				"order": [[ 5, "asc" ]],
			});
			TableManageButtons.init();
		});

		function Change_Activation(button) {
				var user_id=button.id;
				$(function(){
					$.post(
						"{{path('active_user')}}",
						{ data: user_id},
						function(data,status){
							var result = data.split(":");
							document.getElementById("button_"+result[0]).innerHTML=result[1];
							var existingclass=document.getElementById("tr_"+result[0]).className;
							if (result[1]=="Activer")
								document.getElementById("tr_"+result[0]).className="danger "+existingclass;
							else document.getElementById("tr_"+result[0]).className=existingclass.replace("danger ","");
						});			
				})
		}
		
		function Supprimer(button) {
				var user_id=button.id;
				$(function(){
					$.post(
						"{{path('delete_user')}}",
						{ data: user_id},
						function(data,status){
							var result = data.split(":");
							document.getElementById("button_"+result[0]).innerHTML=result[1];
							var existingElement=document.getElementById("tr_"+result[0]);
							
							if (result[1]=="Supprimer")
								existingElement.style.display="none";
						});			
				})
		}
				
