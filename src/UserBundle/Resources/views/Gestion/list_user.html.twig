{% extends 'AppBundle::accueil_auth.html.twig' %}

{% block body %}
	<div id="page-wrapper">
            {% for flash_message in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
	{% endfor %}
	    {% for flash_message in app.session.flashbag.get('danger') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}

			
			<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste des utilisateurs</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
	     
			<div class="row">
				<div class="x_content" style="display: block;">
					<table class="table table-striped responsive-utilities jambo_table bulk_action">
						<thead>
						<tr class="headings">
                        <th>
                          <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" id="check-all" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins></div>
                        </th>
						<th class="column-title" style="display: table-cell;">Nom</th>
						<th class="column-title" style="display: table-cell;">Pr√©nom</th>
						<th class="column-title" style="display: table-cell;">Mail</th>
						<th class="column-title" style="display: table-cell;">Username</th>
						<th class="column-title" style="display: table-cell;">Compte actif ?</th>						
					  </tr>
                    </thead>
				    <tbody>
				{% for user in list_user %}
				<tr class="{% if loop.index is odd %}odd{%else%}even{%endif%} pointer">
					<td class="a-center ">
                          <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" class="flat" name="table_records" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins></div>
                    </td>
					<td class=" ">{{ user.lastname }}</td>
					<td class=" ">{{ user.firstname }}</td>
					<td class=" ">{{ user.email }}</td>
					<td class=" ">{{ user.username }}</td>
					<td class=" ">{{user.enabled}}</td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			</div>
			</div>
			
			
                
             
					  
					  
    
{% endblock %}