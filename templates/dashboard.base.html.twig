{% extends 'base.html.twig' %}

{% macro navlink(name, link, icon, c, variables) %}
  <li class="nav-item {% if c == variables.category %}active{%endif%}">
    <a class="nav-link d-flex align-items-center" href="{{ path(link) }}">
        {{- svg(icon, 'image-sm') -}}
      <span class="menu-title"> {{name}}</span>
    </a>
  </li>
{% endmacro %}

{% import _self as dashboard %}

{% set breadcrumbs = breadcrumbs | default({}) %}

{% block header %}
  <nav class="navbar">
    <div class="navbar-menu-wrapper">
      <div class="navbar-menu-element">
        <a class="nav-link" href="/"><img src="{{ asset('build/images/RemoteLabz_logo_white.png') }}" /></a>
      </div>
      <div class="separator flex-grow-1"></div>
      <div class="navbar-menu-element">
        <ul class="navbar-nav ml-lg-auto">
          <li class="nav-item d-sm-block profile-img dropdown">
            <a class="nav-link profile-image" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img src="/profile/picture?size=24" alt="profile-img" class="rounded-circle mr-1">
              {{ svg('angle-down', 'image-sm') }}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink" style="position: absolute;will-change: transform;">
              <div class="dropdown-header">
                <div class="user-name">{{ app.user.name }}</div>
                {{ app.user.email }}
              </div>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="{{ path('user_profile') }}">Settings</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="{{ path('logout') }}">Sign out</a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
{% endblock %}

{% block body %}
  <div class="page-body-wrapper">
    {% block sidebar %}
      {% set category = category|default('dashboard') %}
      <nav class="sidebar sidebar-offcanvas {% if app.request.cookies.get('sidebar_collapsed') == 'true' %}sidebar-collapsed{%endif%}" id="sidebar">
        <ul class="nav">
          {{ dashboard.navlink("Dashboard", 'index', 'home', 'dashboard', _context) }}
          {{ dashboard.navlink("Activities", 'activities', 'review-list', 'activities', _context) }}
          {{ dashboard.navlink("Labs", 'labs', 'applications', 'labs', _context) }}
          {% if is_granted('ROLE_ADMINISTRATOR') %}
            {{ dashboard.navlink("Users", 'users', 'users', 'users', _context) }}
            {{ dashboard.navlink("Flavors", 'flavors', 'disk', 'flavors', _context) }}
            {{ dashboard.navlink("Courses", 'courses', 'group', 'courses', _context) }}
            {{ dashboard.navlink("Network settings", 'network_settings', 'preferences', 'network_settings', _context) }}
            {{ dashboard.navlink("Network interfaces", 'network_interfaces', 'issue-parent', 'network_interfaces', _context) }}
            {{ dashboard.navlink("Operating systems", 'operating_systems', 'package', 'operating_systems', _context) }}
            {{ dashboard.navlink("Devices", 'devices', 'monitor-o', 'devices', _context) }}
            {{ dashboard.navlink("Instances", 'instances', 'terminal', 'instances', _context) }}
          {% endif %}
  
          <div class="nav-item">
            <a class="toggle-sidebar nav-link" role="button" title="Toggle sidebar" type="button">
              <span class="toggle-sidebar-hide">{{ svg('angle-double-left') }}Collapse sidebar</span>
              <span class="toggle-sidebar-show">{{ svg('angle-double-right') }}</span>
            </a>
          </div>
        </ul>
      </nav>
    {% endblock %}
    <div class="content-wrapper">
      <div class="container-fluid container-limited-xl">
        <div class="container-header-wrapper d-flex">
          <div class="show-sidebar">{{ svg('hamburger', 'image-sm') }}</div>
          {% block breadcrumbs %}
            <div class="breadcrumb">
              {% set breadcrumbs = breadcrumbs | merge({ 'Dashboard': path('index') }) %}
              {% for breadcrumb, link in breadcrumbs|reverse(true) %}
                <div class="breadcrumb-item">
                  {% if link is not null %}
                    <a href="{{ link }}">{{ breadcrumb }}</a>
                  {% else %}
                    <span>{{ breadcrumb }}</span>
                  {% endif %}
                  {%- if not loop.last -%}{{ svg('angle-right')}}{%- endif -%}
                </div>
              {% endfor %}
            </div>
          {% endblock %}
        </div>
      </div>
      <div class="container-fluid container-limited-xl">
        <div class="flashbag-container">
          {%- for label, messages in app.flashes -%}
            {%- for message in messages -%}
              <div class="flash-notice alert alert-{{ label }} alert-dismissible fade show">
                <button aria-label="Close" class="close" data-dismiss="alert" type="dismiss">
                  <span aria-hidden="true">&times;</span>
                </button>
                {{ message }}
              </div>
            {%- endfor -%}
          {%- endfor -%}
          </div>
          {% block wrapper %}{% endblock %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

