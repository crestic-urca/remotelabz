{% extends 'dashboard.base.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = breadcrumbs|merge({ 'Network settings': path('network_settings') }) %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
<div class="row">
    <div class="col grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">{{ 'Network Settings'|trans }}</h4>
                <p>
                    <a href="{{ path('new_network_settings') }}" class="btn btn-success">{{ 'New network settings'|trans }}</a>
                </p>
                <table id="networkSettingsTable" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>{{ 'Name'|trans }}</th>
                            <th>{{ 'IPv4'|trans }}</th>
                            <th>{{ 'IPv6'|trans }}</th>
                            <th>{{ 'Gateway'|trans }}</th>
                            <th>{{ 'Protocol'|trans }}</th>
                            <th>{{ 'Port'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('network-settings') }}
{% endblock %}