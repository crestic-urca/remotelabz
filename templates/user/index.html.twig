{% extends 'dashboard.base.html.twig' %}

{% block wrapper %}
<div class="row">
    {% embed 'modal.html.twig' with {'title': 'Create user', 'class': 'create-user-modal'} %}
        {% block body %}
            {{ form(addUserForm, {'id': 'addUserForm'}) }}
        {% endblock %}
    {% endembed %}

    {% embed 'modal.html.twig' with {'title': 'Import from file', 'class': 'import-user-modal'} %}
        {% block body %}
            {{ form(addUserFromFileForm, {'id': 'addUserFromFileForm'}) }}
        {% endblock %}
    {% endembed %}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Users</h1>
                <p>
                    <button class="btn btn-success" data-target=".create-user-modal" data-toggle="modal" type="button"><i
                            class="fas fa-plus"></i> New</button>
                    <button class="btn btn-info" data-target=".import-user-modal" data-toggle="modal" type="button"><i
                            class="fas fa-upload"></i> Import</button>
    
                    {# <div class="btn-group">
                        <button class="btn btn-primary" data-target=".create-user-modal" data-toggle="modal" type="button"><i
                                class="fa fa-user-edit"></i></button>
                        <button class="btn btn-warning" data-target=".import-user-modal" data-toggle="modal" type="button"><i
                                class="fa fa-user-lock"></i></button>
                        <button class="btn btn-danger" data-target=".create-user-modal" data-toggle="modal" type="button"><i
                                class="fa fa-user-times"></i></button>
                    </div> #}
                </p>
                <table id="datatable-checkbox" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>{% trans %}Enabled{% endtrans %}</th>
                            <th class="sorting">{% trans %}Last name{% endtrans %}</th>
                            <th>{% trans %}First name{% endtrans %}</th>
                            <th>{% trans %}Email{% endtrans %}</th>
                            <th>{% trans %}Groups{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user') }}
{% endblock %}