{% extends 'device/index.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = app.request.uri ends with 'edit' ? breadcrumbs : breadcrumbs|merge({ 'New': path('new_device') }) %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}

<div class="row">
    <div class="col grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    {% if app.request.uri ends with 'edit' %}
                        {{ 'Edit device'|trans }}: {{ name }}
                    {% else %}
                        {{ 'New device'|trans }}
                    {% endif %}
                </h4>
                {{ form(deviceForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# {{ encore_entry_script_tags('device') }} #}
{% endblock %}