{% extends 'device/index.html.twig' %}

{% set publicPath = is_granted("ROLE_ADMINISTRATOR") ? "" : "_public" %}

{% block breadcrumbs %}
    {%- set breadcrumbs = breadcrumbs|merge({ (data.name): path('show_device' ~ publicPath, {'id': data.id}) }) -%}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
<div class="row">
    <div class="col grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    {{ data.name }}
                    {% if is_granted("ROLE_ADMINISTRATOR") %}
                    <div class="float-right">
                        <a href="{{ path('edit_device', {'id': data.id}) }}" class="btn btn-secondary" role="button"><i class="fa fa-edit"></i> {{ 'Edit'|trans }}</a>
                        <a href="{{ path('delete_device', {'id': data.id}) }}" class="btn btn-danger" role="button">Delete</a>
                    </div>
                    {% endif %}
                </h4>
                <p>Brand : {{ data.brand }}</p>
                <hr>
                <p>Model : {{ data.model }}</p>
                <hr>
                <p>Flavor : 
                    {# <a href="{{ path('show_flavor', {'id': data.flavor.id}) }}"> #}
                    {{ data.flavor.name }}
                    {# </a> #}
                </p>
                <hr>
                <p>Network interfaces :</p>
                <ul>
                    {% for networkInterface in data.networkInterfaces %}
                        <li>{{ networkInterface.name }} ({{ networkInterface.type }}, {{ networkInterface.settings.protocol }} access)</li>
                    {% else %}
                        None
                    {% endfor %}
                </ul>
                <hr>
                <p>Operating system : {{ data.operatingSystem.name }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# {{ encore_entry_script_tags('device') }} #}
{% endblock %}