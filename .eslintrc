{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "react/prop-types": 0,
        "no-unused-vars": "warn",
        "no-console": "warn",
        "no-unexpected-multiline": "warn"
    },
    "env" : {
        "browser": true,
        "node" : true,
        "jquery": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.10.2"
        }
    }
}